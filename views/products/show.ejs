<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>
        <link rel="stylesheet" href="/css/star.css">
        <div class="container">

            <%- include('../../partials/flash') %>
                <div class="row">
                    <div class="col-lg-6 mt-2 mb-2 ">
                        <div class="card shadow-lg" style="width: 25rem;">
                            <img src="<%= oneProduct.image %> " class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= oneProduct.name %>
                                </h5>
                                <h5 class="card-title">$
                                    <%= oneProduct.price %>
                                </h5>
                                <p class="card-text">
                                    <%= oneProduct.desc %>
                                </p>
                                <a href="" class="btn btn-success ">Buy</a>
                                <form action="/user/<%= oneProduct._id %>/add" method="POST"> <button class="btn btn-info">Add to Cart</button></form>
                                <a href="/products/<%= oneProduct._id %>/edit " class="btn btn-warning">Edit</a>
                                <div class="m-3 ">
                                    <form action="/products/<%=oneProduct._id%>?_method=DELETE" method="POST"><button class="btn btn-danger">Delete</button></form>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-3">
                        <h6 class="display-6">Leave a review</h6>
                        <form class="validate" action="/products/<%=oneProduct._id%>/reviews" method="POST" novalidate>
                            <!-- <div class="mb-5">
                                <label for="rating" class="form-lable">Rating</label>
                                <input type="range" class="form-range" min="0" max="5" name="rating" id="rating">
                            </div> -->
                            <fieldset class="starability-basic">

                                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="rating" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="rating" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="rating" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="rating" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="rating" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>

                            <div class="mb-3">
                                <label for="desc" class="form-label">Description</label>
                                <textarea id="desc" cols="45" rows="3" name="comment" required></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please write a comment.
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </form>
                        <div class="mb-3  ">
                            <%  for(let x of oneProduct.review){%>
                                <div class="card mt-3 text-start p-3 pb-1">
                                    <!-- <h5 class="card-title">
                                        Rating:
                                        <%= x.rating%>
                                    </h5> -->

                                    <p class="starability-result" data-rating="<%= x.rating%>">
                                        Rated:
                                        <%= x.rating%> stars
                                    </p>
                                    <div class="text-capitalize fw-light" style="color: gray;">
                                        <strong>By <%= x.user %></strong>
                                    </div>
                                    <div class="card-body mb-3">

                                        <p class="text-start">
                                            Review:
                                            <%= x.comment%>
                                        </p>

                                    </div>
                                </div>
                                </p>
                                <% } %>
                        </div>
                    </div>

                </div>
        </div>
        <%- include('../../partials/footer') %>