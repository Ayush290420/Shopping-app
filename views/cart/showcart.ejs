<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>

        <div class="container">

            <%- include('../../partials/flash') %>

                <h4 class="display-4">My Cart</h4>
                <div class="row">
                    <div class="col-lg-8">
                        <%for(let x of cart) { %>


                            <div class="card mb-3" style="max-width: 950px;">
                                <div class="row g-0">
                                    <div class="col-md-4 ">
                                        <img style="max-width: 280px;" src="<%=  x.image%> " alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= x.title%>
                                            </h5>
                                            <p class="card-text m-2">
                                                <%=  x.desc%>
                                            </p>
                                            <form action="/user/<%=currentUser._id%>/cart/<%= x._id %>?_method=DELETE  " method="POST"><button class="btn btn-small btn-danger">Remove</button></form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}%>
                    </div>
                    <div class="col-lg-4">
                        <h6 class="display-6">Products</h6>
                        <% totalAmount=0 %>
                            <ul class="list-group ">
                                <% for(let x of cart) {%>
                                    <li class="list-group-item">
                                        <%= x.name %> - <strong>&#8377; </strong>
                                            <%= x.price %>
                                    </li>
                                    <% totalAmount+=x.price %>

                                        <% } %>
                            </ul>
                            <p><strong>Total Amount : &#8377; <%= totalAmount %> </strong></p>
                            <a href="/payment/cart"><button class="btn btn-success">Proceed to Payment</button></a>
                    </div>
                </div>
        </div>
        <%- include('../../partials/footer') %>