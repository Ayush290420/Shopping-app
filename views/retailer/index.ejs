<%- include("../../partials/header") %>
    <%- include("../../partials/navbar") %>
        <div class="container">
            <%- include('../../partials/flash') %>
                <section>
                    <div class="m-3 p-3" style="background-color: #6c757d;">
                        <h1><i class="fas fa-money-bill-wave"></i> Your Products</h1>
                    </div>

                </section>
                <div class="row  products ">
                    <%  for(let x of products){%>
                        <div class="col-lg-3 col-md-6 col-sm-12 p-4">
                            <div class="card text-center shadow" style="width: 17rem;">
                                <img src="<%=x.image  %>" class="card-img-top  " alt="...">
                                <div class="card-body ">
                                    <h5 class="card-title">
                                        <%=x.name%>
                                    </h5>

                                    <p class="card-text">
                                        <%=x.desc.substring(0,90)%>...
                                    </p>
                                    <a href="/retailer/view/<%= x._id %> " class="btn btn-outline-primary">View</a>
                                </div>
                            </div>
                        </div>
                        <%  }%>
                </div>

        </div>

        <%- include("../../partials/footer") %>