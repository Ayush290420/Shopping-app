<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>
        <div style="width: 50%;margin: 10px auto; padding-top: 3rem;">
            <%- include('../../partials/flash') %>
                <form class="validate" action="/register" method="POST" novalidate>
                    <h1 class="display-4">Sign Up</h1>
                    <div class="mb-3">
                        <label for="username" class="form-label">UserName</label>
                        <input type="text" class="form-control" id="username" placeholder="Username" name="username" required>

                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Email" name="email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password" name='password' required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="mb-3">
                            <label for="phoneNo" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNo" placeholder="Optional" name='phoneNo'>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="form-check mt-3">
                                <input class="form-check-input" type="radio" name="userType" value="customer" id="customer" checked>
                                <label class="form-check-label" for="customer">
                              User
                            </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="userType" value="retailer" id="retailer">
                                <label class="form-check-label" for="retailer">
                              Retailer
                            </label>
                            </div>
                            <button type="submit" class="btn btn-primary m-4">Register</button>
                </form>
                </div>

                <%- include('../../partials/footer') %>